{
  "name": "portable-wbs-tool",
  "version": "1.0.0",
  "description": "Portable WBS Tool - デスクトップアプリ版",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron": "electron .",
    "electron:dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --win --mac"
  },
  "build": {
    "appId": "com.portable-wbs-tool",
    "productName": "Portable WBS Tool",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "web/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      },
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
